extends ../shared/layout

block main-content
    .well.bs-component.col-lg-6
            form.form-horizontal(method="post")
                label.label.label-default(for="username") Username
                input.form-control(id="username" type="text" name="username" placeholder="Username")
                label.label.label-default(for="password") Password
                input.form-control(id="password" type="password" name="password" placeholder="Password")
                label.label.label-default(for="confirm-password") Confirm Password
                input.form-control(id="confirm-password" type="password" name="confirmPassword" placeholder="Confirm Password")
                br
                input.btn.btn-success(type="submit" value="Submit")