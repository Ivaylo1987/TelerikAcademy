doctype
html
    head
        title CV Creator
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav.navbar-inverse
            .container
                .navbar-header
                    a.navbar-brand(href="/") CV Creator
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/") Home
                    ul.nav.navbar-nav.navbar-right
                        if !currentUser
                            li
                                a(href="/register") Register
                            li
                                a(href="/login") Login
                        else
                            li
                                a(href="/cv") CV
                            li
                                a(href="/profile") Welcome, #{currentUser.username} !
                            li
                                a(href="/logout") Logout

        .container
            br
            if errorMessage
                .alert.alert-danger(role="alert") #{errorMessage}

            block main-content

        footer
            p.text-center
                | &copy; Dev Inc.

        include scripts
        block page-scripts